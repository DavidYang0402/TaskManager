@model TaskManager.ViewModels.EditTaskViewModel

<h2>編輯任務</h2>

<form asp-action="Edit" method="post">

    <div class="mb-4">
        <div class="form-group">
            <label for="Title">標題</label>
            <input type="text" id="Title" class="form-control" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">描述</label>
            <textarea id="Description" class="form-control" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Status">狀態</label>
            <select asp-for="Status" class="form-control">
                <option selected="待辦">待辦</option>
                <option value="進行中">進行中</option>
                <option value="完成">完成</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">更新</button>
</form>
