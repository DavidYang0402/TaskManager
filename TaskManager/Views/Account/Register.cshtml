@model TaskManager.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "註冊";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" method="post">
    <div class="mb-4">
        <div class="form-group">
            <label asp-for="UserName">使用者名稱</label>
            <input asp-for="UserName" class="form-control" placeholder="User name"/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullName">全名</label>
            <input asp-for="FullName" class="form-control" placeholder="Full name"/>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">電子郵件</label>
            <input asp-for="Email" class="form-control" placeholder="Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">密碼</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="A-Z + a-z + 0-9 + symbols" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">確認密碼</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">註冊</button>
</form>

<div>
    <p>已有帳號? <a href="@Url.Action("Login", "Account")">點此登入</a></p>
</div>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="text-danger">@error.ErrorMessage</div>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
